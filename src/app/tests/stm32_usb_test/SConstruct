import sys
sys.path.insert(0, "../../../util")
from build_tools import *

RulosBuildTarget(
    name = "stm32_libusb_test",
    sources = ["main.c"],
    peripherals = "usb-cdc-stm32 uart",
    extra_cflags = [
        "-DLOG_TO_SERIAL",
        "-DUART_TX_QUEUE_LEN=2048",  # Large buffer for debug logging
    ],
    platforms = [
        ArmStmPlatform(
            "stm32g431x8",
        ),
    ],
).build()
