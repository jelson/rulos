import sys
sys.path.insert(0, "../../../util")
from build_tools import *

#BOARD = "-DBOARD_GPS_TEST_RIG_REV_B"
#CHIP = "stm32f303xb"

BOARD = "-DBOARD_LTETAG_DEV_REV_A"
CHIP = "stm32g0b1xe"

RulosBuildTarget(
    name = "lowlevel",
    sources = ["lowlevel.c"],
    extra_cflags = [
        "-DLOG_TO_SERIAL",
        BOARD,
    ],
    platforms = [
        ArmStmPlatform(CHIP)
    ],
    peripherals = "uart sdcard2"
).build()


RulosBuildTarget(
    name = "fattest",
    sources = ["fattest.c"],
    extra_cflags = [
        "-DLOG_TO_SERIAL",
        BOARD,
    ],
    platforms = [
        ArmStmPlatform(CHIP)
    ],
    peripherals = "uart fatfs sdcard2"
).build()

RulosBuildTarget(
    name = "writeread",
    sources = ["writeread.c"],
    peripherals = "uart fatfs",
    extra_cflags = [
        "-DLOG_TO_SERIAL",
        "-DFF_USE_MKFS=1",
    ],
    platforms = [
        ArmStmPlatform(
            CHIP,
            extra_cflags = [
                BOARD,
            ],
            extra_peripherals = "sdcard2",
        ),
        SimulatorPlatform(
            extra_peripherals = "sdcardsim",
            extra_cflags = [
            ],
        )
    ],
).build()
