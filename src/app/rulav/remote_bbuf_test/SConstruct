import sys
sys.path.insert(0, "../../../util")
from build_tools import *

RulosBuildTarget(
    name = "remote_bbuf_test",
    sources = ["remote_bbuf_test.c"],
    peripherals = "7seg_panel",
    extra_cflags = [
        "-DBOARDCONFIG_NETROCKET",
    ],
    platforms = [
        SimulatorPlatform(),
        AvrPlatform(
            "atmega1284p",
            extra_cflags=[
                "-DBOARD_PCB11",
            ],
            extra_peripherals="7seg_panel_hardware twi",
        ),
    ],
).build()
