import sys
sys.path.insert(0, "../../../util")
from build_tools import *

RulosBuildTarget(
    name = "snaketest",
    sources = [
        "snaketest.c",
    ],
    platforms = [
        SimulatorPlatform(
            extra_cflags = [
                "-DBOARDCONFIG_UNIROCKET_LOCALSIM",
                "-DLOG_TO_SERIAL",
            ],
            extra_peripherals = "keypad",
        ),
    ],
    peripherals = "uart 7seg_panel joystick input_controller rocket rasters audio keypad",
).build()
